run ~/.config/tmux/plugins/catppuccin/catppuccin.tmux
run ~/.config/tmux/plugins/vim-tmux-navigator/vim-tmux-navigator.tmux

unbind R 
bind R source-file ~/.tmux.conf \; display "Reloaded!"

# Change the default prefix and unbind it
set -g prefix C-a
unbind C-b

# Sending Ctrl-a to the underlying app
bind C-a send-prefix

set-option -sg escape-time 10
set-option -g focus-events on
setw -g mode-keys vi
set -g mouse on
set -g history-limit 10000

# Vim copy mode 
bind Escape copy-mode 
unbind -T copy-mode-vi v
unbind -T copy-mode-vi MouseDragEnd1Pane
bind-key -T copy-mode-vi v send-keys -X begin-selection 
bind-key -T copy-mode-vi C-v send-keys -X rectangle-toggle 
bind-key -T copy-mode-vi y send-keys -X copy-selection-and-cancel 
unbind p 
bind p paste-buffer

# Cicle trough windows 
bind -r C-h select-window -t :-
bind -r C-l select-window -t :+ 

# Resize pane 
bind -r H resize-pane -L 5
bind -r J resize-pane -D 5
bind -r K resize-pane -U 5
bind -r L resize-pane -R 5

# Shortcut for syncronize-panes toggle
# bind C-S set-window-option synchronize-panes

set -g base-index 1
setw -g pane-base-index 1

bind  c  new-window      -c "#{pane_current_path}"
bind  %  split-window -h -c "#{pane_current_path}"
bind '"' split-window -v -c "#{pane_current_path}"

set-option -g status-position top 

set -g window-status-current-format "#[fg=#11111b,bg=#{@thm_mauve}] #I #[fg=#cdd6f4,bg=#{@thm_surface_1}] #{b:pane_current_path} "
set -g window-status-format "#[fg=#11111b,bg=#{@thm_overlay_2}] #I #[fg=#cdd6f4,bg=#{@thm_surface_0}] #{b:pane_current_path} "

set -g status-right-length 100
set -g status-left-length 100
set -g status-left ""
set -g status-right "#{E:@catppuccin_status_application}"
set -agF status-right "#{E:@catppuccin_status_cpu}"
set -ag status-right "#{E:@catppuccin_status_session}"
{{- if .is_laptop }}
set -agF status-right "#{E:@catppuccin_status_battery}"
{{- end }}

# Set tmux plugin manager
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-resurrect'
{{- if .is_laptop }}
set -g @plugin 'tmux-plugins/tmux-battery'
{{- end }}
set -g @plugin 'tmux-plugins/tmux-cpu'
run '~/.tmux/plugins/tpm/tpm'

# Popups
bind g display-popup -d "#{pane_current_path}" -w 80% -h 80% -E "lazygit"

{{- if eq .machine_type "work" }}
# claude
bind a run-shell '
  SESSION="claude-$(echo #{pane_current_path} | md5sum | cut -c1-6)"; \
  tmux has-session -t "$SESSION" 2>/dev/null || \
  tmux new-session -d -s "$SESSION" -c "#{pane_current_path}" "claude"; \
  tmux display-popup -w 90% -h 90% -E "tmux attach-session -t $SESSION"'
{{- end }}
